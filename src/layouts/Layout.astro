---
import "@styles/global.css";
import { Header, Footer } from "@components";

export interface Props {
  title: string;
  showThemeToggle?: boolean;
}

const { title, showThemeToggle = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Ángela Rera's Web Dev Blog" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header showThemeToggle={showThemeToggle} />

    <main>
      <slot />
    </main>

    <Footer />

    <!-- Theme manager initializing -->
    <script>
      // Carga diferida para no bloquear la renderización
      window.addEventListener("DOMContentLoaded", () => {
        import("/src/scripts/theme-client.ts");
      });
    </script>
  </body>
</html>
